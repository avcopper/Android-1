<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorMain"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:text="@string/cities"/>

        <TextView
            android:id="@+id/add_city_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/add"
            android:textColor="@color/colorMain"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="35sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cities"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBack"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <FrameLayout
                android:id="@+id/city1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/city1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/colorMain"
                    android:textSize="25sp"
                    android:text="@string/city1"
                    android:paddingTop="16dp"/>

                <TextView
                    android:id="@+id/city1_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorMain"
                    android:textSize="30sp"
                    android:text="@string/city1_temp" />

                <TextView
                    android:id="@+id/city1_temp_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city1_temp_day"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city1_temp_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city1_temp_night"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city1_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorMain"
                    android:textSize="14sp"
                    android:text="@string/rain" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/city2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/city2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/colorMain"
                    android:textSize="25sp"
                    android:text="@string/city2"
                    android:paddingTop="16dp"/>

                <TextView
                    android:id="@+id/city2_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorMain"
                    android:textSize="30sp"
                    android:text="@string/city2_temp" />

                <TextView
                    android:id="@+id/city2_temp_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city2_temp_day"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city2_temp_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city2_temp_night"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city2_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorMain"
                    android:textSize="14sp"
                    android:text="@string/cloudy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/city3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/city3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/colorMain"
                    android:textSize="25sp"
                    android:text="@string/city3"
                    android:paddingTop="16dp"/>

                <TextView
                    android:id="@+id/city3_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorMain"
                    android:textSize="30sp"
                    android:text="@string/city3_temp" />

                <TextView
                    android:id="@+id/city3_temp_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city3_temp_day"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city3_temp_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city3_temp_night"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city3_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorMain"
                    android:textSize="14sp"
                    android:text="@string/sunny" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/city4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/city4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/colorMain"
                    android:textSize="25sp"
                    android:text="@string/city4"
                    android:paddingTop="16dp"/>

                <TextView
                    android:id="@+id/city4_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorMain"
                    android:textSize="30sp"
                    android:text="@string/city4_temp" />

                <TextView
                    android:id="@+id/city4_temp_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city4_temp_day"
                    android:layout_marginStart="30dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/city4_temp_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city4_temp_night"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/city4_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorMain"
                    android:textSize="14sp"
                    android:text="@string/snow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    android:layout_gravity="bottom"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>